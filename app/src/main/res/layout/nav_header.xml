<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/routeCode"
        android:layout_width="@dimen/nav_route_code_bg"
        android:layout_height="@dimen/nav_route_code_bg"
        android:background="@drawable/profile_placeholder"
        android:gravity="center"
        android:textSize="@dimen/nav_route_code_text"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_center_gap_v"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/nav_text_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/user_name"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>